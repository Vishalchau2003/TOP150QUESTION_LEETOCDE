209. Minimum Size Subarray Sum


class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int n = nums.size();
        int l = 0;
        int r = 0;
        int sum = 0;
        int len = INT_MAX;
        while (r < n) {
            sum += nums[r];
            while (sum >= target) {
                len = min(len, r - l + 1);
                sum -= nums[l];
                l++;
                // “I already reached the target… can I still reach it if I
                // remove something from the left?”becase we want smller
                // length
            }
            r++;
        }

        if(len==INT_MAX){
            return 0;
        }
        else{
            return len;
        }
    }
};
