class Solution {
public:
    bool canConstruct(string ransomNote, string magazine) {
        int n=magazine.size();
        int m=ransomNote.size();
        unordered_map<char,int>mpp;
        for(int i=0;i<n;i++){
            mpp[magazine[i]]++;
        }

        for(int i=0;i<m;i++){
            if(mpp[ransomNote[i]]==0){
                return false;
            }
            else{
                mpp[ransomNote[i]]--;
            }
        }
        return true;
    }
};
